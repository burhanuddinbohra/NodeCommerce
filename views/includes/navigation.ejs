<header class="header">
  <nav class="header_nav">
    <ul class="header_ul">
      <li class="header_li active">
        <a href="/" class="<%= path=== '/' ? 'active' : '' %>">Shop</a>
      </li>
      <li class="header_li active">
        <a href="/products" class="<%= path=== '/products' ? 'active' : '' %>"
          >Products</a
        >
      </li>
      <% if(isAuthenticated){ %>
      <li class="header_li active">
        <a href="/cart" class="<%= path=== '/cart' ? 'active' : '' %>">Cart</a>
      </li>
      <li class="header_li active">
        <a href="/orders" class="<%= path=== '/orders' ? 'active' : '' %>"
          >Orders</a
        >
      </li>

      <li class="header_li">
        <a
          href="/admin/add-product"
          class="<%= path=== '/admin/add-product' ? 'active' : '' %>"
          >Add Product</a
        >
      </li>
      <li class="header_li">
        <a
          href="/admin/products"
          class="<%= path=== '/admin/products' ? 'active' : '' %>"
          >Admin Products</a
        >
      </li>
      <% } %>
    </ul>
    <ul class="header_ul">
      <% if(!isAuthenticated){ %>
      <li class="header_li active">
        <a href="/login" class="<%= path=== '/login' ? 'active' : '' %>"
          >Login</a
        >
      </li>
      <li class="header_li active">
        <a class="<%= path === '/signup' ? 'active' : '' %>" href="/signup"
          >Signup</a
        >
      </li>
      <% } else { %>
      <li class="header_li active">
        <form action="/logout" method="post">
          <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
          <button type="submit" class="btn-logout">LogOut</button>
        </form>
      </li>
      <p style="color: lightgray"><%= userEmail %></p>
      <% } %>
    </ul>
  </nav>
</header>
