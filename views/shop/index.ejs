<%- include('../includes/head.ejs') %>
</head>
<link rel="stylesheet" href="/css/headerCss.css">
<link rel="stylesheet" href="/css/shopCss.css">
<body>
    <%- include('../includes/navigation.ejs') %>


    <main>
        <% if(prods.length > 0) {%>
       <div class="grid">
        <% prods.forEach(product => { %>
            <article class="card product-item">
                <header class="card__header">
                    <h1 class="product__title" title="<%= product.title %>"><%= product.title %></h1>
                </header>
                <div class="card__image">
                    <img src="/<%= product.imageUrl %>" alt="<%= product.title %>">
                </div>
                <div class="card__content">
                    <h2 class="product__price">â‚¹<%= product.price %></h2>
                    <!-- <p class="product__description"><%= product.description %></p> -->
                </div>
                <div class="card__actions">
                    <a href="/products/<%= product._id %>" class="btn">Details</a>
                    <% if(isAuthenticated){ %>
                    <%- include('../includes/add-to-cart.ejs',{product : product}) %>
                    <% } %>
                </div>
            </article>
            <% }) %>
           
        </div> 
        <% } else { %> 
                <h1>No Products Found!</h1>
            <% } %>
            <%- include('../includes/pagination.ejs',{currentPage : currentPage, previousPage:previousPage,hasPreviousPage:hasPreviousPage, hasNextPage:hasNextPage, nextPage:nextPage ,lastPage:lastPage, }) %>
    </main>
<%- include('../includes/end.ejs') %>