<%- include('../includes/head.ejs') %>
</head>
<link rel="stylesheet" href="/css/headerCss.css">
<link rel="stylesheet" href="/css/addProductMain.css">
<body>
    <%- include('../includes/navigation.ejs') %>

    <main>
        <form class="product-form" action="/admin/<% if(edit=='true') {%>edit-product <% } else { %>product <% } %>" method="post">
          <div class="form-control">
            <label for="title">Title</label>
            <input type="text" name="title" id="title" value="<% if(edit == 'true') { %> <%= product.title %> <% } %>">
          </div>
          <div class="form-control">
            <label for="imageUrl">Image Url</label>
            <input type="text" name="imageUrl" id="imageUrl" value="<% if(edit == 'true') { %> <%= product.imageUrl %> <% } %>">
          </div>
          <div class="form-control">
            <label for="price">Price</label>
            <input type="number" name="price" id="price" value="<% if(edit == 'true') { %><%=product.price%><% } %>" >
          </div>
          <div class="form-control">
            <label for="descriptioin">Descriptioin</label>
            <textarea name="descriptioin" id="descriptioin" rows="5" ><% if(edit == 'true') { %> <%= product.descriptioin %> <% } %></textarea>
          </div>
            <button type="submit"><% if(edit=='true') {%> Update Product <% } else { %> Add Product <% } %></button>
        </form>
    </main>
<%- include('../includes/end.ejs') %>